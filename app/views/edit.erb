<form method="post" action="/recipes/<%= @recipe.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Recipe Name: <input id="name" type="text" name="name" value=" <%= @recipe.name %>"><br>
    Recipe Ingredients: <input id="ingredients" type="text" name="ingredients" value= "<%= @recipe.ingredients %>"><br>
    Recipe Cook Time: <input id="cook_time" type="text" name="cook_time" value= "<%= @recipe.cook_time %>"><br>
    <input type="submit" id="Submit" />
</form>